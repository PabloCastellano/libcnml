	name			CDATA	#IMPLIED
	snmp_index		CDATA	#IMPLIED
	status			CDATA	#REQUIRED
	title			CDATA	#REQUIRED
	type			CDATA	#REQUIRED
	updated			CDATA	#IMPLIED
